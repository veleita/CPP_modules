COMPILER = clang++
FLAGS = -Wall -Wextra -Werror -I. -std=c++98 -g

NAME = KarenComplains

SRCS = main.cpp
OBJS = $(SRCS:.cpp=.o)


all: $(NAME)


%.o: %.cpp
	$(COMPILER) $(FLAGS) -c $< -o $@

$(NAME): $(OBJS)
	${COMPILER} ${FLAGS} $(OBJS) -o $(NAME)


clean:
	@rm -f $(OBJS) *.replace

fclean: clean
	@rm -f $(NAME)


re: fclean all


test: re
	@./$(NAME)

.PHONY: all clean fclean re test
